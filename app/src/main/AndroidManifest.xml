        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.volunteerUserFragments.volunteerUserMyVolunteers.VolunteerUserDetailsActivity"></activity>
        <activity android:name=".ui.volunteerUserFragments.volunteerUserSearchForVolunteers.searchVolunteerDetailActivity"></activity>

        <activity android:name=".ui.needHelpUserFragments.needHelpUserMyActivities.NeedHelpDetailsActivity" />
