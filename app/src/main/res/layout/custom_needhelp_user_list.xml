<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:gravity="center|top"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/needhelp_detail_iVolunteer_button"
                android:layout_width="113dp"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/avss"
                android:foregroundGravity="left"
                android:text="iVolunteer"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/needhelp_detail_contact_button"
                android:layout_width="113dp"
                android:layout_height="26dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/avss"
                android:foregroundGravity="left"
                android:text="contact"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="134dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/needhelpUser_name"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/avss"
                android:text="title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/needhelpUser_PhoneNumber"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avss"
                android:text="description"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/needhelpUser_Email"
                android:layout_width="220dp"
                android:layout_height="31dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avss"
                android:text="description"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/needhelpUser_Id"
                android:layout_width="220dp"
                android:layout_height="31dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avss"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
