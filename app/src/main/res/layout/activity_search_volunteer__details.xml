<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.volunteerUserFragments.volunteerUserSearchForVolunteers.searchVolunteerDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="396dp"
        android:layout_height="292dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/layout_rounded"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_type_lbl"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-40dp"
                android:fontFamily="@font/avss"
                android:gravity="center_horizontal|center_vertical"
                android:text="Event category"
                android:textAlignment="viewStart"
                android:textColor="#070707"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/search_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="-40dp"
                android:layout_weight="1"
                android:fontFamily="@font/avss"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_city_lbl"
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/avss"
                android:gravity="center_horizontal|center_vertical"
                android:text="City"
                android:textAlignment="viewStart"
                android:textColor="#070707"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/search_detail_city"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/avss"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/search_detail_morning_check_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/avss"
                android:text="Morning" />

            <CheckBox
                android:id="@+id/search_detail_noon_check_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/avss"
                android:text="Noon" />

            <CheckBox
                android:id="@+id/search_detail_evening_check_box"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/avss"
                android:text="Evening" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_volunteers_linear_layout_city"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/search_detail_sunday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S" />

            <CheckBox
                android:id="@+id/search_detail_monday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M" />

            <CheckBox
                android:id="@+id/search_detail_tuesday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T" />

            <CheckBox
                android:id="@+id/search_detail_wednesday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="W" />

            <CheckBox
                android:id="@+id/search_detail_thursday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T" />

            <CheckBox
                android:id="@+id/search_detail_friday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F" />

            <CheckBox
                android:id="@+id/search_detail_saturday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/search_detail_details"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textColorHighlight="#090909"
                android:textColorLink="#0B0A0A" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="506dp"
        android:layout_height="462dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/search_NeedHelpUserName_text"
            android:layout_width="374dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_rounded"
            android:fontFamily="@font/avss"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_NeedHelpUserPhone_text"
            android:layout_width="374dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/layout_rounded"
            android:fontFamily="@font/avss"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/search_NeedHelpUserMail_text"
            android:layout_width="374dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/layout_rounded"
            android:fontFamily="@font/avss"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/search_detail_ivolunteer"
            android:layout_width="357dp"
            android:layout_height="33dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/btn_rounded"
            android:fontFamily="@font/avss"
            android:foregroundGravity="left"
            android:text="iVolunteer"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/search_error_text_view"
            android:layout_width="373dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/search_detail_contact"
            android:layout_width="357dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/btn_rounded"
            android:fontFamily="@font/avss"
            android:foregroundGravity="left"
            android:text="contact"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>