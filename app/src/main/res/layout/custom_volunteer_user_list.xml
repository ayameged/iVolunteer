<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:gravity="center|top"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="142dp"
            android:layout_height="150dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/volunteer_detail_contact_button"
                android:layout_width="107dp"
                android:layout_height="28dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/avss"
                android:foregroundGravity="left"
                android:text="contact"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/volunteer_detail_rate_button"
                android:layout_width="106dp"
                android:layout_height="29dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/avss"
                android:foregroundGravity="left"
                android:text="rate"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/volunteerUser_name"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/avss"
                android:text="title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/volunteerUser_PhoneNumber"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avss"
                android:text="description"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/volunteerUser_Email"
                android:layout_width="233dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avss"
                android:text="description"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/volunteerUser_ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/volunteerUser_Id"
                android:layout_width="233dp"
                android:layout_height="2dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avss"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/volunteerUser_rateId"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avss"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>