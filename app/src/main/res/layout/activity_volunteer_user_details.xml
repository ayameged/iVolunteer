<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.volunteerUserFragments.volunteerUserMyVolunteers.VolunteerUserDetailsActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="426dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="35dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_volunteers_type_lbl"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/gabriela"
                android:gravity="center_horizontal|center_vertical"
                android:text="Event category"
                android:textAlignment="viewStart"
                android:textColor="#070707"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/my_volunteers_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_volunteers_city_lbl"
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:fontFamily="@font/gabriela"
                android:gravity="center_horizontal|center_vertical"
                android:text="City"
                android:textAlignment="viewStart"
                android:textColor="#070707"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/my_volunteers_detail_city"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/my_volunteers_detail_morning_check_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:text="Morning" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_noon_check_box"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:text="Noon" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_evening_check_box"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:text="Evening" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_volunteers_linear_layout_city"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/my_volunteers_detail_sunday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_monday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_tuesday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_wednesday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="W" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_thursday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_friday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F" />

            <CheckBox
                android:id="@+id/my_volunteers_detail_saturday_check_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/my_volunteers_detail_details"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:textColorHighlight="#090909"
                android:textColorLink="#0B0A0A" />


            <ListView
                android:id="@+id/volunteer_needhelpusers_list"
                android:layout_width="409dp"
                android:layout_height="243dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="487dp">

            </ListView>
        </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>